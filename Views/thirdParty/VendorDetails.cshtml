@model NBE_Project.Models.ThirdPartyDto

@{
    ViewData["Title"] = "Profile Details";
    Layout = "_Layout3";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-dark text-white text-center">
            <h2 class="mb-0">Profile Details</h2>
        </div>
        <div class="card-body">
            <!-- Vendor Profile Information -->
            <div class="border-bottom pb-4">
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>Vendor Name:</strong> @Model.VendorId</p>
                       @*  <p><strong>Vendor Name:</strong> @Model.Id</p> *@
                        <p><strong>Company:</strong> @Model.Company</p>
                        <p><strong>Contact Title:</strong> @Model.ContactTitle</p>
                        <p><strong>Email:</strong> @Model.Email</p>
                        <p><strong>Contact Number:</strong> @Model.ContactNumber</p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Contract Start Date:</strong> @Model.ContractStartDate.ToShortDateString()</p>
                        <p><strong>Contract End Date:</strong> @Model.ContractEndDate.ToShortDateString()</p>
                        <p>
                            <strong>Contract File:</strong>
                            @if (!string.IsNullOrEmpty(Model.ContractName))
                            {
                                <a href="@Model.ContractName" target="_blank" class="btn btn-link">View Contract</a>
                            }
                            else
                            {
                                <span class="text-muted">No contract file available</span>
                            }
                        </p>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-between py-4">
                <a href="@Url.Action("Index", "VendorHome")" class="btn btn-primary">Back to Vendor Home</a>
             
            </div>
        </div>
    </div>
</div>
