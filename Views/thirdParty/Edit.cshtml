@model NBE_Project.Models.ThirdPartyDto

@{
    ViewBag.Title = "Edit Vendor Profile";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-dark text-white text-center">
            <h2 class="mb-0 text-center">Edit Vendor</h2>
        </div>
        <div class="card-body">
            <form method="post" enctype="multipart/form-data" id="vendorForm">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label for="VendorName" class="form-label">Name</label>
                        <input id="VendorName" class="form-control grey-text-field" asp-for="VendorId" />
                        <span asp-validation-for="VendorId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label for="VendorCategory" class="form-label">Vendor Category</label>
                        <input id="VendorCategory" class="form-control grey-text-field" asp-for="VendorCategory" />
                        <span asp-validation-for="VendorCategory" class="text-danger"></span>
                        <div class="form-text">Note: Specify the category (e.g., Low, Medium, High). Low = no mutual data exchange, Medium = mutual data exchange, High = extensive mutual data exchange.</div>
                    </div>

                    <div class="mb-3">
                        <label for="ContactTitle" class="form-label">Title</label>
                        <input id="ContactTitle" class="form-control grey-text-field" asp-for="ContactTitle" />
                        <span asp-validation-for="ContactTitle" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label for="Company" class="form-label">Company</label>
                        <textarea id="Company" class="form-control grey-text-field" asp-for="Company"></textarea>
                        <span asp-validation-for="Company" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label for="ContactNumber" class="form-label">Contact Number</label>
                        <input id="ContactNumber" class="form-control grey-text-field" asp-for="ContactNumber" />
                        <span asp-validation-for="ContactNumber" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label for="Email" class="form-label">Email</label>
                        <input id="Email" class="form-control grey-text-field" asp-for="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label for="ContractFile" class="form-label">Contract File</label>
                        <input type="file" class="form-control grey-text-field" id="ContractFile" name="ContractFile" />
                        <span asp-validation-for="ContractFile" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ContractStartDate" class="form-label">Contract Start Date</label>
                        <input asp-for="ContractStartDate" type="date" class="form-control grey-text-field" />
                        <span asp-validation-for="ContractStartDate" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ContractEndDate" class="form-label">Contract End Date</label>
                        <input asp-for="ContractEndDate" type="date" class="form-control grey-text-field" />
                        <span asp-validation-for="ContractEndDate" class="text-danger"></span>
                    </div>



                <div class="row">
                    <div class="col-12 text-center">
                        <div class="d-flex justify-content-center">
                            <button type="submit" class="btn btn-primary w-100 w-sm-auto mx-2">Save</button>
                            <a asp-controller="ThirdParty" asp-action="Index" class="btn btn-secondary w-100 w-sm-auto mx-2">Cancel</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const form = document.getElementById('vendorForm');
        form.addEventListener('submit', function (event) {
            event.preventDefault(); // Prevent the default form submission

            // Display a SweetAlert2 popup
            Swal.fire({
                title: 'Are you sure?',
                text: 'Do you want to save these changes?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, save it!',
                cancelButtonText: 'No, cancel!'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Submit the form if confirmed
                    form.submit();
                }
            });
        });
    });
</script>



