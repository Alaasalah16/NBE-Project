                                    <span class="menu-title"style="color:black;">Home</span>
                                </a>
                            </li>
                            <li class="nav-item d-none d-lg-flex full-screen-link">
                                <a class="nav-link">
                                    <i class="mdi mdi-fullscreen" id="fullscreen-button"></i>
                                </a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link count-indicator dropdown-toggle" id="notificationDropdown" href="#" data-bs-toggle="dropdown">
                                    <i class="mdi mdi-bell-outline"></i>
                                    @if (context.Notifications.Any(n => !n.IsRead))
                                    {
                                        <span class="count-symbol bg-danger"></span>
                                    }
                                </a>
                                <div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="notificationDropdown">
                                    <h6 class="p-3 mb-0">Notifications</h6>
                                    <div class="dropdown-divider"></div>
                                    @foreach (var notification in context.Notifications.OrderByDescending(n => n.DateCreated).Take(5).ToList())
                                    {
                                        <a class="dropdown-item preview-item">
                                            <div class="preview-thumbnail">
                                                <i class="mdi mdi-alert-circle-outline"></i>
                                            </div>
                                            <div class="preview-item-content">
                                                <h6 class="preview-subject font-weight-normal">@notification.Message</h6>
                                                <p class="text-muted mb-0">@notification.DateCreated.ToString("g")</p>
                                            </div>
                                        </a>
                                    }
                                    <div class="dropdown-divider"></div>
                                    <h6 class="p-3 mb-0 text-center">See all notifications</h6>
                                </div>
                            </li>

                            <li class="nav-item nav-logout d-none d-lg-flex">
                                <a class="nav-link" href=/Account/Login>
                                    <i class="mdi mdi-power"></i>
