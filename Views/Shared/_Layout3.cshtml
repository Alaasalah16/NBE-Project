    <script type="text/javascript">
        document.getElementById('notificationDropdown').addEventListener('click', function () {
            fetch('@Url.Action("MarkNotificationsAsRead", "thirdParty")', {
                method: 'POST'
            }).then(response => {
                if (response.ok) {
                    fetch('@Url.Action("GetNotificationList", "thirdParty")')
                        .then(response => response.text())
                        .then(html => {
                            document.getElementById('notificationList').innerHTML = html;
                   

                    //  remove the red circle manually if you don't want a full page refresh.
                            document.querySelector('.count-symbol.bg-danger').style.display = 'none';
                    location.reload();
                }
            });
        });
    </script>
