@model NBE_Project.ViewModels.LoginVM

@{
    Layout = null;
    var backgroundImageUrl = Url.Content("~/images/bank_background.jpg");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            background-image: url('@backgroundImageUrl');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
        }

        .card {
            border-radius: 0.75rem;
            border: 1px solid #ddd;
            overflow: hidden;
            background-color: rgba(255, 255, 255, 0.9);
        }

        .card-body {
            padding: 1.5rem;
        }

        .nav-tabs {
            border-bottom: 2px solid #333;
            margin-bottom: 1rem;
        }

            .nav-tabs .nav-link {
                border-radius: 0.5rem 0.5rem 0 0;
                margin-right: 0;
                padding: 1rem 1.5rem;
                border: 1px solid transparent;
                background-color: #f8f9fa;
                font-size: 1.125rem;
            }

                .nav-tabs .nav-link.active {
                    background-color: #01613b;
                    color: #fff;
                    border-color: #333 #333 #fff;
                }

                .nav-tabs .nav-link:hover {
                    background-color: #e9ecef;
                    border-color: #333 #333 #fff;
                }

        .btn-primary {
            background-color: #01613b;
            border-color: #333;
            padding: 1rem;
            font-size: 1.125rem;
            border-radius: 0.5rem;
        }

            .btn-primary:hover {
                background-color: #01613b;
                border-color: #333;
            }

        .form-control {
            border-radius: 0.5rem;
            padding: 1rem;
        }

        .form-label {
            font-weight: bold;
        }

        .container {
            margin-top: 2rem;
        }

        .text-center {
            text-align: center;
        }

        .card-body .form-group {
            margin-bottom: 1rem;
        }

        .grey-text-field {
            background-color: lightgray; /* Light grey background */
            color: #333; /* Dark grey text color */
        }

    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5 col-lg-5">
                <div class="card shadow-lg">
                    <div class="card-body">
                        <h1 class="text-center mt-5 mb-4">360 Security Portal</h1>
                        <h2 class="text-center mb-4">Login Page</h2>

                        <form method="post" asp-action="Login" asp-controller="Account">
                            <div class="form-group row">
                                <label for="username" class="col-form-label col-md-3">Username</label>
                                <div class="col-md-8">
                                    <input asp-for="username" type="text" class="form-control grey-text-field" />
                                    <span style="color:red" asp-validation-for="username"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="Password" class="col-form-label col-md-3">Password</label>
                                <div class="col-md-8">
                                    <input asp-for="Password" type="password" class="form-control grey-text-field" />
                                    <span style="color:red" asp-validation-for="Password"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <input asp-for="IsPresistent" type="checkbox" />
                                <label for="rememberMe" class="form-label">Remember me</label>
                            </div>
                            <div>
                                <button type="submit" class="btn btn-primary w-100">Login</button>
                            </div>
                        </form>

                        <div class="text-center mt-4">
                            <p>Don't have an account? <a asp-action="Registration" asp-controller="User">Sign up</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
