@model NBE_Project.ViewModels.RegisterVM
@{
    Layout = null;

    var backgroundImageUrl = Url.Content("~/images/bank_background.jpg");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            background-image: url('@backgroundImageUrl');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
        }

        .card {
            border-radius: 0.75rem;
            border: 1px solid #ddd;
            overflow: hidden;
            background-color: rgba(255, 255, 255, 0.9);
        }

        .card-body {
            padding: 2rem;
        }

        .btn-primary {
            background-color: #01613b;
            border-color: #333;
            padding: 1rem;
            font-size: 1.125rem;
            border-radius: 0.5rem;
        }

            .btn-primary:hover {
                background-color: #01613b;
                border-color: #333;
            }

        .form-control {
            border-radius: 0.5rem;
            padding: 1rem;
        }

        .form-label {
            font-weight: bold;
        }

        .container {
            margin-top: 2rem;
        }

        .text-center {
            text-align: center;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-Group {
            margin-bottom: 1rem;
        }

        .text-sm {
            font-size: 0.875rem;
        }

        .text-warning {
            color: #ffc107;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="card shadow-lg">
                    <div class="card-body">
                        <h1 class="text-center mt-3 mb-4">360 Security Portal</h1>
                        <h2 class="text-center mb-4">Sign Up</h2>

                        <form method="post" asp-action="Registration" asp-controller="User" role="form">
                            <div class="form-group row">
                                <label class="col-form-label col-md-4">First Name</label>
                                <div class="col-md-8">
                                    <input asp-for="FirstName" type="text" class="form-control">
                                    <span style="color:red" asp-validation-for="FirstName"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-form-label col-md-4">Last Name</label>
                                <div class="col-md-8">
                                    <input asp-for="LastName" type="text" class="form-control">
                                    <span style="color:red" asp-validation-for="LastName"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-form-label col-md-4">Username</label>
                                <div class="col-md-8">
                                    <input asp-for="Username" type="text" class="form-control">
                                    <span style="color:red" asp-validation-for="Username"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-form-label col-md-4">Email</label>
                                <div class="col-md-8">
                                    <input asp-for="Email" type="email" class="form-control">
                                    <span style="color:red" asp-validation-for="Email"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-form-label col-md-4">Phone</label>
                                <div class="col-md-8">
                                    <input asp-for="Phone" type="text" class="form-control">
                                    <span style="color:red" asp-validation-for="Phone"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-form-label col-md-4">Address</label>
                                <div class="col-md-8">
                                    <input asp-for="Address" type="text" class="form-control">
                                    <span style="color:red" asp-validation-for="Address"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-form-label col-md-4">Gender</label>
                                <div class="col-md-8">
                                    <input asp-for="Gender" type="text" class="form-control">
                                    <span style="color:red" asp-validation-for="Gender"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-form-label col-md-4">Password</label>
                                <div class="col-md-8">
                                    <input asp-for="Password" type="password" class="form-control">
                                    <span style="color:red" asp-validation-for="Password"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-form-label col-md-4">Confirm Password</label>
                                <div class="col-md-8">
                                    <input asp-for="ConfirmPassword" type="password" class="form-control">
                                    <span style="color:red" asp-validation-for="ConfirmPassword"></span>
                                </div>
                            </div>

                            <div class="form-group mb-3">
                                <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" checked>
                                <label class="form-check-label" for="flexCheckDefault">
                                    I agree to the <a href="javascript:;" class="text-dark font-weight-bolder">Terms and Conditions</a>
                                </label>
                            </div>

                            <div style="color:red" asp-validation-summary="All"></div>

                            <div class="text-center">
                                <button class="btn btn-primary w-100" type="submit">Sign Up</button>
                            </div>
                        </form>

                        <div class="text-center mt-4">
                            <p class="mb-2 text-sm mx-auto">
                                Already have an account?
                                <a asp-action="Login" asp-controller="Account" class="text-warning font-weight-bold">Sign in</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
