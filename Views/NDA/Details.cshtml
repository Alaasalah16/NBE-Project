@model NBE_Project.ViewModels.NDAViewModel

@{
    ViewData["Title"] = "NDA Details";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-dark text-white">
            <h2 class="mb-0 text-center">NDA Details</h2>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-6">
                    <h4>NDA Information</h4>
                    
                    <p>
                        <strong>NDA File:</strong>
                        @if (!string.IsNullOrEmpty(Model.FileName))
                        {
                            <a href="@Url.Content($"~/Uploads/{Model.FileName}")" download>
                                @Model.FileName
                            </a>
                        }
                        else
                        {
                            <span>No File Available</span>
                        }
                    </p>
                    <p><strong>Start Date:</strong> @Model.NDAStartDate.ToString("d")</p>
                    <p><strong>End Date:</strong> @Model.NDAEndDate.ToString("d")</p>
                    <p><strong>Is Renewable:</strong> @Model.IsRenewable </p>
                    <p><strong>Scope of Work:</strong> @Model.ScopeOfWork</p>
                </div>
                <div class="col-md-6">
                    <h4>Vendor Information</h4>
                    <p><strong>Vendor Name:</strong> @Model.VendorName</p>
                    <p><strong>Owner Type:</strong> @Model.OwnerType</p>
                 
                    <p>
                        <strong>NDA Approval:</strong>
                        @if (!Model.IsApproved)
                        {
                            <form asp-action="Approve" asp-route-id="@Model.Id" method="post">
                                <button type="submit" class="btn btn-success btn-sm" aria-label="Approve NDA">Approve</button>

                            </form>
                        }
                        else
                        {
                            <span class="badge bg-success">Approved</span>
                        }
                    </p>
                </div>
            </div>

            <div class="text-center">
                <a asp-action="Index" class="btn btn-primary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>
