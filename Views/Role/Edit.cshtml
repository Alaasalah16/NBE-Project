@using Microsoft.AspNetCore.Identity
@model IdentityRole

@{
    ViewBag.Title = "Edit Role";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-lg">
        <div class="card-header bg-dark text-white text-center">
            <h2 class="my-2">Edit Role</h2>
        </div>
        <div class="card-body p-4">
            <form asp-action="Edit" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label for="name" class="form-label" style="font-size: 1.1em; color: #4a4a4a;">
                        <i class="fas fa-user-tag fa-lg"></i> Role Name
                        <span class="tooltip-icon" data-bs-toggle="tooltip" data-bs-placement="top" title="Enter the new role name here.">
                            <i class="fas fa-info-circle fa-lg"></i>
                        </span>
                    </label>
                    <input asp-for="Name" id="name" class="form-control" placeholder="Enter the role name" style="border: 1px solid #ced4da; border-radius: 8px;" />
                    <span asp-validation-for="Name" class="text-danger mt-2"></span>
                </div>

                <div class="d-flex justify-content-center mt-4">
                    <button type="submit" class="btn btn-primary shadow-sm me-2">
                        <i class="fas fa-save fa-lg"></i> Save Changes
                    </button>
                    <a href="@Url.Action("Index", "Role")" class="btn btn-secondary shadow-sm">
                        <i class="fas fa-times-circle fa-lg"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script>
    $(document).ready(function () {
        $('[data-bs-toggle="tooltip"]').tooltip(); // Initialize tooltips

        // Custom form validation logic
        $('form').on('submit', function (e) {
            if (this.checkValidity() === false) {
                e.preventDefault();
                e.stopPropagation();
            }
            $(this).addClass('was-validated');
        });
    });
</script>

<style>
    /* Custom modern card styles */
    .card {
        border-radius: 15px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
    }

    .card-header {
        background-color: #343a40;
        color: #ffffff;
        border-bottom: none;
        border-radius: 15px 15px 0 0;
    }

    .form-label {
        display: flex;
        align-items: center;
        font-size: 1.1em;
        color: #4a4a4a;
    }

    .tooltip-icon {
        margin-left: 8px;
        color: #6c757d;
        cursor: pointer;
        font-size: 1.2em;
    }

    .form-control {
        border-radius: 8px;
        border: 1px solid #ced4da;
        padding: 0.75rem 1.25rem;
    }

   

</style>
