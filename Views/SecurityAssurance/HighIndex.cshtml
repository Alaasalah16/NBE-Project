@model IEnumerable<NBE_Project.ViewModels.SecurityAssuranceVM>

@{
    ViewData["Title"] = "High Category Security Assurances";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-dark text-white">
            <h2 class="mb-0 text-center">Security Assurances - High Category</h2>
        </div>
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Vendor</th>
                        <th>Vendor Category</th>
                    
                        <th>Security Questionnaire</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.VendorName</td>
                            <td>@item.VendorCategory</td>
                           
                            <td>
                                <a asp-controller="Questionnaire" asp-action="DisplayAnswers" asp-route-id="@item.Id" class="btn btn-primary btn-sm">
                                    <i class="mdi mdi-check"></i> Answers
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <a class="btn btn-secondary" href="@Url.Action("Index")">Back</a>
        </div>
    </div>
</div>
